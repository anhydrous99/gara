# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=gara-images
DYNAMODB_TABLE_NAME=gara-albums

# API Key Authentication
SECRETS_MANAGER_API_KEY_NAME=gara-api-key

# Server Configuration
PORT=8080

# File Upload Configuration
TEMP_UPLOAD_DIR=/tmp/gara_uploads
MAX_UPLOAD_SIZE=104857600

# AWS Credentials (if not using IAM role)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Logging Configuration (ECS/CloudWatch optimized)
# Log level: trace, debug, info, warn, error, critical
LOG_LEVEL=info

# Log format: json (for CloudWatch Logs Insights) or text (human-readable)
LOG_FORMAT=json

# Environment name (used for log grouping and metrics dimensions)
ENVIRONMENT=production

# Metrics Configuration
# Enable CloudWatch Embedded Metric Format (EMF)
METRICS_ENABLED=true

# CloudWatch metrics namespace
METRICS_NAMESPACE=GaraImage
