# Local Storage Configuration
STORAGE_PATH=./data/images

# Database Configuration
# DATABASE_TYPE: sqlite (default), mysql, or dynamodb
DATABASE_TYPE=sqlite

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
DATABASE_PATH=./data/gara.db

# MySQL Configuration (used when DATABASE_TYPE=mysql)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=gara
# MYSQL_PASSWORD=your-password-here
# MYSQL_DATABASE=gara

# DynamoDB Configuration (used when DATABASE_TYPE=dynamodb)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# DYNAMODB_ENDPOINT_URL=http://localhost:8000  # Optional: for DynamoDB Local
# DYNAMODB_ALBUMS_TABLE=gara_albums
# DYNAMODB_IMAGES_TABLE=gara_images

# API Key Authentication
# Set your API key directly in the environment variable
API_KEY=your-api-key-here
# Or use a custom environment variable name (default: API_KEY)
# API_KEY_ENV_VAR=MY_CUSTOM_API_KEY

# Server Configuration
PORT=8080

# File Upload Configuration
TEMP_UPLOAD_DIR=/tmp/gara_uploads
MAX_UPLOAD_SIZE=104857600

# Logging Configuration
# Log level: trace, debug, info, warn, error, critical
LOG_LEVEL=info

# Log format: json or text (human-readable)
LOG_FORMAT=json

# Environment name (used for log grouping and metrics dimensions)
ENVIRONMENT=development

# Metrics Configuration
# Enable metrics collection (logged as JSON)
METRICS_ENABLED=true

# Metrics namespace
METRICS_NAMESPACE=GaraImage

# Watermark Configuration (optional)
# WATERMARK_ENABLED=false
# WATERMARK_TEXT=Â© Your Company
# WATERMARK_OPACITY=0.5
# WATERMARK_POSITION=bottom-right
