name: Tests (Improved)

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

# Cancel in-progress runs for the same workflow and branch
concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

jobs:
  test:
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest, macos-latest]
        build_type: [Debug, Release]
        include:
          - os: ubuntu-latest
            cache_key_prefix: ubuntu
          - os: macos-latest
            cache_key_prefix: macos

    runs-on: ${{ matrix.os }}

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    # ========================================================================
    # Caching - Speeds up builds by 50-70%
    # ========================================================================

    - name: Cache dependencies (Ubuntu)
      if: runner.os == 'Linux'
      uses: actions/cache@v4
      with:
        path: |
          /var/cache/apt/archives
        key: ${{ runner.os }}-apt-${{ hashFiles('.github/workflows/test-improved.yml.example') }}
        restore-keys: |
          ${{ runner.os }}-apt-

    - name: Cache Homebrew (macOS)
      if: runner.os == 'macOS'
      uses: actions/cache@v4
      with:
        path: |
          ~/Library/Caches/Homebrew
          /usr/local/Cellar
        key: ${{ runner.os }}-brew-${{ hashFiles('.github/workflows/test-improved.yml.example') }}
        restore-keys: |
          ${{ runner.os }}-brew-

    - name: Cache CMake build
      uses: actions/cache@v4
      with:
        path: |
          build
          ~/.ccache
        key: ${{ matrix.cache_key_prefix }}-${{ matrix.build_type }}-build-${{ hashFiles('**/CMakeLists.txt', 'src/**', 'include/**') }}
        restore-keys: |
          ${{ matrix.cache_key_prefix }}-${{ matrix.build_type }}-build-
          ${{ matrix.cache_key_prefix }}-${{ matrix.build_type }}-

    # ========================================================================
    # Dependency Installation
    # ========================================================================

    - name: Install dependencies (Ubuntu)
      if: runner.os == 'Linux'
      run: |
        sudo apt-get update
        sudo apt-get install -y \
          build-essential \
          cmake \
          git \
          pkg-config \
          zlib1g-dev \
          libssl-dev \
          libcurl4-openssl-dev \
          libvips-dev \
          libglib2.0-dev \
          ccache \
          lcov

    - name: Install dependencies (macOS)
      if: runner.os == 'macOS'
      run: |
        brew install openssl zlib cmake pkg-config glib vips ccache lcov

    # ========================================================================
    # Build with ccache
    # ========================================================================

    - name: Setup ccache
      run: |
        ccache --max-size=500M
        ccache --set-config=compression=true
        ccache --zero-stats

    - name: Configure CMake
      run: |
        mkdir -p build
        cd build
        cmake .. \
          -DCMAKE_BUILD_TYPE=${{ matrix.build_type }} \
          -DENABLE_COVERAGE=${{ matrix.build_type == 'Debug' && 'ON' || 'OFF' }} \
          -DCMAKE_CXX_COMPILER_LAUNCHER=ccache \
          -DBUILD_STATIC=OFF

    - name: Build
      run: |
        cd build
        cmake --build . --config ${{ matrix.build_type }} -j$(nproc 2>/dev/null || sysctl -n hw.ncpu) --verbose

    - name: ccache statistics
      run: |
        ccache --show-stats

    # ========================================================================
    # Run Tests
    # ========================================================================

    - name: Run tests
      run: |
        cd build
        ctest --output-on-failure --verbose --schedule-random

    # ========================================================================
    # Code Coverage (Debug builds only)
    # ========================================================================

    - name: Generate coverage report
      if: matrix.build_type == 'Debug' && runner.os == 'Linux'
      run: |
        cd build
        lcov --capture --directory . --output-file coverage.info
        lcov --remove coverage.info \
          '/usr/*' \
          '*/tests/*' \
          '*/googletest/*' \
          '*/build/*' \
          --output-file coverage_filtered.info
        lcov --list coverage_filtered.info

    - name: Upload coverage to Codecov
      if: matrix.build_type == 'Debug' && runner.os == 'Linux'
      uses: codecov/codecov-action@v4
      with:
        files: ./build/coverage_filtered.info
        flags: unittests
        name: codecov-${{ matrix.os }}-${{ matrix.build_type }}
        fail_ci_if_error: false

    - name: Check coverage threshold
      if: matrix.build_type == 'Debug' && runner.os == 'Linux'
      run: |
        cd build
        COVERAGE=$(lcov --summary coverage_filtered.info 2>&1 | grep "lines" | awk '{print $2}' | sed 's/%//')
        echo "Coverage: $COVERAGE%"
        if (( $(echo "$COVERAGE < 80.0" | bc -l) )); then
          echo "::warning::Coverage $COVERAGE% is below 80% threshold"
          # Don't fail - just warn for now
          # exit 1
        fi

    # ========================================================================
    # Upload Artifacts
    # ========================================================================

    - name: Upload test results
      if: always()
      uses: actions/upload-artifact@v4
      with:
        name: test-results-${{ matrix.os }}-${{ matrix.build_type }}
        path: |
          build/Testing/
          build/coverage_filtered.info
        retention-days: 30

    - name: Upload build logs
      if: failure()
      uses: actions/upload-artifact@v4
      with:
        name: build-logs-${{ matrix.os }}-${{ matrix.build_type }}
        path: |
          build/CMakeFiles/CMakeOutput.log
          build/CMakeFiles/CMakeError.log
        retention-days: 7

  # ========================================================================
  # Static Analysis (runs in parallel)
  # ========================================================================

  static-analysis:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Install dependencies
      run: |
        sudo apt-get update
        sudo apt-get install -y \
          build-essential \
          cmake \
          clang-tidy \
          cppcheck \
          libvips-dev \
          libcurl4-openssl-dev \
          libssl-dev

    - name: Run clang-tidy
      continue-on-error: true
      run: |
        mkdir -p build
        cd build
        cmake .. -DCMAKE_EXPORT_COMPILE_COMMANDS=ON
        run-clang-tidy -p . \
          -header-filter='.*' \
          -checks='*,-fuchsia-*,-google-*,-llvm-header-guard,-modernize-use-trailing-return-type,-readability-identifier-length' \
          ../src ../include 2>&1 | tee clang-tidy-report.txt

    - name: Run cppcheck
      continue-on-error: true
      run: |
        cppcheck --enable=all \
          --inconclusive \
          --xml \
          --xml-version=2 \
          --suppress=missingIncludeSystem \
          --suppress=unusedFunction \
          -I include/ \
          src/ 2> cppcheck-report.xml

    - name: Upload static analysis reports
      uses: actions/upload-artifact@v4
      with:
        name: static-analysis-reports
        path: |
          build/clang-tidy-report.txt
          cppcheck-report.xml

  # ========================================================================
  # Security Scanning (runs in parallel)
  # ========================================================================

  security:
    runs-on: ubuntu-latest
    permissions:
      security-events: write

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Run Trivy vulnerability scanner
      uses: aquasecurity/trivy-action@master
      with:
        scan-type: 'fs'
        scan-ref: '.'
        format: 'sarif'
        output: 'trivy-results.sarif'
        severity: 'CRITICAL,HIGH'

    - name: Upload Trivy results to GitHub Security
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: 'trivy-results.sarif'

  # ========================================================================
  # Summary Job (requires all others to complete)
  # ========================================================================

  summary:
    runs-on: ubuntu-latest
    needs: [test, static-analysis, security]
    if: always()

    steps:
    - name: Check test results
      run: |
        if [ "${{ needs.test.result }}" == "failure" ]; then
          echo "::error::Tests failed"
          exit 1
        fi

    - name: Generate summary
      run: |
        echo "## Test Results Summary" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY
        echo "- Tests: ${{ needs.test.result }}" >> $GITHUB_STEP_SUMMARY
        echo "- Static Analysis: ${{ needs.static-analysis.result }}" >> $GITHUB_STEP_SUMMARY
        echo "- Security Scan: ${{ needs.security.result }}" >> $GITHUB_STEP_SUMMARY
